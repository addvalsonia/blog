<div align="right">
		<% form_tag posts_path, :method => 'get', :id => "search"do %>
				<%= hidden_field_tag :direction, params[:direction] %>
		  		<%= hidden_field_tag :sort, params[:sort] %>
				<%= text_field_tag :search, params[:search] %>
				<%= submit_tag "Search Blog", :title => nil %>
		<% end %>
		
	</div>	

	<h1 align="center">Listing posts</h1><br /><br />

<div id="posts" align="center">
	<%= render "post", :object => @posts %>
</div>

